type User{
    id: ID! @id
    name: String!
    phone: String! @unique
    email: String
    password: String!
    role : String!
    date : DateTime @createdAt
    plates : [UsersOnPlates!]
    houses : [UsersOnHouses!]
    products : [UsersOnProducts!]
    steeds: [Steed!] @relation(name:"UserSteeds")
}
type UsersOnPlates{
    id : ID! @id
    user: User! @relation(fields:[userId],references:[id])
    plat : Plat! @relation(fields:[platId],references:[id])
    localisation: String!
    ordered: Boolean!
    nombre: Int!
    phone: String!
    date: DateTime @createdAt
}
type UsersOnHouses{
    id : ID! @id
    user: User! @relation(fields:[userId],references:[id])
    house : House! @relation(fields:[houseId],references:[id])
    ordered: Boolean!
    phone: String!
    date: DateTime @createdAt
}
type UsersOnProducts{
    id : ID! @id
    user: User! @relation(fields:[userId],references:[id])
    product : Product! @relation(fields:[productId],references:[id])
    localisation: String!
    nombre : Int!
    phone: String!
    date: DateTime @createdAt
    ordered: Boolean!
}
type Plat{
    id: ID! @id
    name: String!
    illustration: String!
    description: String!
    price: Float!
    date : DateTime @createdAt
    users : [UsersOnPlates!]
    archived: Boolean!
}
type House{
    id: ID! @id
    illustration: String!
    description: String
    localisation: String!
    price : Float!
    date : DateTime @createdAt
    archived: Boolean!
}
type Steed{
    id : ID! @id
    pointA : String!
    pointB : String!
    description: String!
    dateCourse: String!
    date : DateTime @createdAt
    ordered: Boolean!
    phone: String!
    user : User!  @relation(name:"UserSteeds")
}
type Product{
    id: ID! @id
    name : String!
    description: String!
    illustration: String!
    price: Float!
    date : DateTime @createdAt
    archived: Boolean!
}
type Notification{
    id: ID! @id
    title: String!
    bigText: String!
    message: String!
    subText: String!
    date: DateTime! @createdAt
}